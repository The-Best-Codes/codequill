{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CodeQuill",
  "version": "2.0.7",
  "identifier": "com.codequill.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CodeQuill",
        "width": 800,
        "height": 600,
        "minWidth": 100,
        "minHeight": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["codequill", "codequill-app"]
      }
    }
  }
}
